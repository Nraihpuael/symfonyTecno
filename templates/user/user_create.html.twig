{% extends('base.html.twig') %}

{% block title %}
    Registro de usuarios | Symfony
{% endblock %}

{% block body %}
    <h1>Registro!</h1>
    {{ form_start(form_users) }}

        <div class="form-group col-lg-12">
            {{ form_row(form_users.name) }}
        </div>
        <div class="form-group col-lg-12">
            {{ form_row(form_users.apellido) }}
        </div>
        <div class="form-group col-lg-12">
            {{ form_row(form_users.email) }}
        </div>
        <div class="form-group col-lg-12">
            {{ form_row(form_users.password) }}
        </div>
        {{ form_widget(form_users.submit) }}
        <a href="{{ path('getUsers') }}" class="btn btn-default">Cancelar</a>

    {{ form_end(form_users) }}
{% endblock %}

